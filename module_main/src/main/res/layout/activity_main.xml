<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/main_fl"
        android:layout_weight="8"></FrameLayout>
    <com.chaychan.library.BottomBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/main_bbl"
        >
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/outline_home_grey_400_36dp"
            app:iconSelected="@drawable/baseline_home_blue_a400_36dp"
            app:iconWidth="40dp"
            app:iconHeight="40dp"
            app:itemText="主页"
            app:itemTextSize="20sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/outline_dashboard_grey_400_24dp"
            app:iconSelected="@drawable/outline_dashboard_light_blue_400_24dp"
            app:iconWidth="40dp"
            app:iconHeight="40dp"
            app:itemText="分类"
            app:itemTextSize="20sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/outline_shopping_cart_grey_400_36dp"
            app:iconSelected="@drawable/outline_shopping_cart_light_blue_300_36dp"
            app:iconWidth="40dp"
            app:iconHeight="40dp"
            app:itemText="主页"
            app:itemTextSize="20sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/outline_message_grey_400_36dp"
            app:iconSelected="@drawable/outline_message_light_blue_300_36dp"
            app:iconWidth="40dp"
            app:iconHeight="40dp"
            app:itemText="消息"
            app:itemTextSize="20sp"
            />
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/outline_person_grey_400_36dp"
            app:iconSelected="@drawable/baseline_person_light_blue_500_36dp"
            app:iconWidth="40dp"
            app:iconHeight="40dp"
            app:itemText="我的"
            app:itemTextSize="20sp"
            />
    </com.chaychan.library.BottomBarLayout>



</LinearLayout>