<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f7fff7"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_goods_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="#03A9F4"
        app:title="商品详情"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/home_goods_toolbar"
        android:id="@+id/home_goods_item_img"
        ></ImageView>

    <TextView
        android:id="@+id/home_goods_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_goods_item_img"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:textColor="#1ACF22"
        android:maxLines="2"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/home_goods_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_55"
            android:drawableTop="@drawable/baseline_star_border_grey_400_36dp"
            android:text="分享"></TextView>

        <TextView
            android:id="@+id/home_goods_item_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_toRightOf="@id/home_goods_item_share"
            android:drawableTop="@drawable/outline_shopping_cart_grey_500_36dp"
            android:text="购物车"></TextView>

        <Button
            android:layout_width="@dimen/dp_180"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/common_red"
            android:text="加入购物车"
            android:id="@+id/home_goods_item_shop_btn"
            android:textColor="@color/white"></Button>
        <com.ehenjoom.redspot.RedSpot
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:id="@+id/home_goods_item_red"
            android:layout_marginLeft="@dimen/dp_200"
            ></com.ehenjoom.redspot.RedSpot>
    </RelativeLayout>

</RelativeLayout>